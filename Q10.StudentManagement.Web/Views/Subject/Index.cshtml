@using Q10.StudentManagement.Web.Models.Subject

@model IEnumerable<SubjectViewModel>
@{
    ViewData["Title"] = "Asignatura";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="mb-0">
            Lista de Asignaturas
        </h3>
    </div>
    <div class="rounded-circle">
        <a asp-action="Create" class="btn btn-primary rounded-circle">
            Nuevo
        </a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Codigo</th>
            <th>Creditos</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model)
        {
            <tr>
                <td>@subject.pName</td>
                <td>@subject.pCode</td>
                <td>@subject.pCredits</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@subject.pId">Actualizar</a> |
                    <a asp-action="Delete" asp-route-id="@subject.pId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>